<Window x:Class="Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Title="SignalR" Height="450" Width="800"
        x:Name="mainWindowWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="4">
            <Label Content="Enter login"/>
            <TextBox Text="{Binding Login}"/>
            <Label Content="Enter message"/>
            <TextBox Text="{Binding Message}"/>
            <Button Content="Send" 
                    Command="{Binding SendMessageCommand}"
                    CommandParameter="{Binding DataContext, ElementName=mainWindowWindow}"/>
        </StackPanel>
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Messages}"
                 VerticalAlignment="Stretch"/>
        <Label Grid.Row="2"
               Margin="4 0"
               Content="{Binding ErrorMessage}"
               Foreground="Red"/>
    </Grid>
</Window>